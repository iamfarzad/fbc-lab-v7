# FBC Lab v7 - Production Environment Variables
# Copy this file to .env.local and update with your actual values

# ========================================
# CORE API KEYS
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# ========================================
# FLY.IO DEPLOYMENT
# ========================================
# WebSocket Server (Port 3001)
NEXT_PUBLIC_LIVE_SERVER_URL=wss://fb-consulting-websocket.fly.dev

# WebRTC Signaling Server (Port 3002) 
NEXT_PUBLIC_WEBRTC_SERVER_URL=wss://fb-consulting-websocket.fly.dev:3002

# ========================================
# VERCEL DEPLOYMENT
# ========================================
# Frontend & API Routes
NEXT_PUBLIC_APP_URL=https://farzadbayat.com
NEXT_PUBLIC_VERCEL_URL=farzadbayat.com

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
NODE_ENV=production
FBC_USE_MOCKS=0
LIVE_MOCK=0
LIVE_SERVER_TLS=false

# ========================================
# FLY.IO MONITORING
# ========================================
# Optional: Set budget limits for cost monitoring
FLY_MONTHLY_BUDGET=50
FLY_BUDGET_ALERT_THRESHOLD=80

# ========================================
# ADMIN AUTHENTICATION
